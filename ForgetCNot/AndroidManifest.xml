<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.svgonbatik.forgetcnot"
      android:versionCode="7"
      android:versionName="Parkfinder">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.location.network" />
	<uses-feature android:name="android.hardware.location.gps" />
	<uses-feature android:name="android.hardware.wifi" />
    <application android:icon="@drawable/icon1" android:label="@string/app_name">
        <uses-library android:name="com.google.android.maps" />
        
    <activity android:name="splashscreen" android:launchMode="standard" android:screenOrientation="portrait">
    <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
    </activity><uses-library android:name="com.google.android.maps" />
        <activity android:name="com.svgonbatik.forgetcnot.GoogleMapsActivity"
                  android:label="@string/app_name" android:launchMode="standard"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
</manifest>