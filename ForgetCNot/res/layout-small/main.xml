<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"/>
    <com.google.android.maps.MapView 
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:enabled="true"
        android:clickable="true"
        android:apiKey="0BvGia5neQIPyevEaO47uDEa21odiJbj6_6k4kg"
        />
        
        
            <com.svgonbatik.forgetcnot.TransparentPanel
            android:id="@+id/transparent_panel"
        android:layout_width="fill_parent"
        android:paddingLeft="5px"
        android:paddingTop="5px"
        android:paddingRight="5px"
        android:paddingBottom="0px"
        android:gravity="bottom" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        
        <Button android:id="@+id/delete_last"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Undo"/>


    </com.svgonbatik.forgetcnot.TransparentPanel>
    <LinearLayout
        android:id="@+id/zoom"
        android:layout_width="fill_parent"
        android:paddingLeft="5px"
        android:paddingTop="5px"
        android:paddingRight="5px"
        android:paddingBottom="5px"
        android:gravity="top" android:layout_height="wrap_content" android:layout_alignParentTop="true">
    </LinearLayout>
        <com.svgonbatik.forgetcnot.AnimatedPanel
        android:id="@+id/animated_panel"
	    android:paddingLeft="5px"
    	android:paddingTop="0px"
	    android:paddingRight="0px"
    	android:paddingBottom="5px"
	    android:gravity="center_vertical"
    	android:layout_alignParentRight="true"
	    android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
	    android:layout_gravity="fill_vertical">
	    
	    <ImageView
	    android:id="@+id/cat_feature_background_left"
   		android:src="@drawable/slidershort"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:scaleType="fitXY"/>
            
            <LinearLayout
 			android:id="@+id/notice_layout"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
			android:layout_height="wrap_content"
			android:layout_width="170px"
			android:gravity="right"
			android:paddingLeft="50px"
			android:paddingTop="46px"
			android:paddingRight="0px"
			android:paddingBottom="5px">
			</LinearLayout>
			
			<LinearLayout
 			android:id="@+id/notice_button_layout"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="170px"
			android:gravity="left"
			android:paddingTop="215px"
			android:paddingLeft="11px"
			android:paddingBottom="2px">

			<Button android:id="@+id/slider_left"
        	style="@style/slider_left_Button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Select"/>
        	
        	<Button android:id="@+id/slider_right"
        	style="@style/slider_right_Button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Cancel"/>
			
			</LinearLayout>

    </com.svgonbatik.forgetcnot.AnimatedPanel>   

<RelativeLayout
 android:id="@+id/distance_layout"
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="horizontal"
 android:layout_height="wrap_content"
 android:layout_width="fill_parent"
 android:gravity="right"
 android:paddingLeft="5px"
 android:paddingTop="5px"
 android:paddingRight="5px"
 android:paddingBottom="5px"
 >

</RelativeLayout>
</RelativeLayout>
