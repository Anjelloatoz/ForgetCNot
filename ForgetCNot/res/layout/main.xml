<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"/>
    <com.google.android.maps.MapView 
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:enabled="true"
        android:clickable="true"
        android:apiKey="0BvGia5neQIPyevEaO47uDEa21odiJbj6_6k4kg"
        />
        
        <ImageView
	    android:id="@+id/button_panel_image"
   		android:src="@drawable/bottom_panel"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:paddingTop="600px"
   		android:scaleType="fitXY"/>

        <com.svgonbatik.forgetcnot.TransparentPanel
            android:id="@+id/transparent_panel"
        android:layout_width="fill_parent"
        android:paddingLeft="5px"
        android:paddingTop="5px"
        android:paddingRight="5px"
        android:paddingBottom="5px"
        android:gravity="bottom" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                
                <Button android:id="@+id/map_button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:paddingTop="50px"
        	android:paddingLeft="20px"
        	android:paddingRight="20px"
        	android:paddingBottom="15px"
        	android:textColor="#E01C0B"
        	android:background="@null"
        	android:text="Map"/>
            
            <Button android:id="@+id/zoom_button"
            android:layout_marginLeft="30dip"
            android:paddingTop="10px"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#E01C0B"
        	android:background="@null"
        	android:text="Zoom"/>
            
            <Button android:id="@+id/c_button"
            android:layout_marginLeft="30dip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#E01C0B"
        	android:background="@null"
        	android:text="C"/>
            
            <Button android:id="@+id/pan_button"
            android:layout_marginLeft="40dip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#E01C0B"
        	android:background="@null"
        	android:text="Pan"/>
            
            <Button android:id="@+id/beep_button"
            android:layout_marginLeft="40dip"
            android:paddingTop="70px"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#E01C0B"
        	android:background="@null"
        	android:text="Beep"/>

    </com.svgonbatik.forgetcnot.TransparentPanel>
    <LinearLayout
        android:id="@+id/zoom"
        android:layout_width="fill_parent"
        android:paddingLeft="5px"
        android:paddingTop="5px"
        android:paddingRight="5px"
        android:paddingBottom="5px"
        android:gravity="top" android:layout_height="wrap_content" android:layout_alignParentTop="true">
    </LinearLayout>
        <com.svgonbatik.forgetcnot.AnimatedPanel
        android:id="@+id/animated_panel"
	    android:paddingLeft="5px"
    	android:paddingTop="5px"
	    android:paddingRight="0px"
    	android:paddingBottom="5px"
	    android:gravity="center_vertical"
    	android:layout_alignParentRight="true"
	    android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
	    android:layout_gravity="fill_vertical">
	    
	    <ImageView
	    android:id="@+id/cat_feature_background_left"
   		android:src="@drawable/slider250"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:paddingTop="50px"
   		android:paddingLeft="100px"
   		android:scaleType="fitXY"/>
            
            <LinearLayout
 			android:id="@+id/notice_layout"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
			android:layout_height="wrap_content"
			android:layout_width="360px"
			android:gravity="right"
			android:paddingLeft="140px"
			android:paddingTop="90px"
			android:paddingRight="5px"
			android:paddingBottom="5px">
			</LinearLayout>
			
			<LinearLayout
 			android:id="@+id/notice_button_layout"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="380px"
			android:gravity="left"
			android:paddingTop="405px"
			android:paddingLeft="177px"
			android:paddingBottom="5px">
			
        	<Button android:id="@+id/slider_left"
        	android:background="@null"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#E01C0B"
        	android:text="Yes"/>
            
            <Button android:id="@+id/slider_right"
            android:background="@null"
            android:layout_marginLeft="75dip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#E01C0B"
        	android:text="No"/>
			
			</LinearLayout>

    </com.svgonbatik.forgetcnot.AnimatedPanel>   

<RelativeLayout
 android:id="@+id/distance_layout"
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="horizontal"
 android:layout_height="wrap_content"
 android:layout_width="fill_parent"
 android:gravity="right"
 android:paddingLeft="5px"
 android:paddingTop="5px"
 android:paddingRight="5px"
 android:paddingBottom="5px"
 >

</RelativeLayout>
</RelativeLayout>
